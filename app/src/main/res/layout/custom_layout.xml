<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">

            <TextView
                android:id="@+id/forecast_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thu, 20 Apr 2017"
                android:textSize="25sp"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:src="@android:drawable/stat_sys_upload_done"/>

                <TextView
                    android:id="@+id/forecast_max_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="25sp"
                    android:padding="5dp"
                    android:layout_marginRight="40dp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="6dp"
                    android:src="@android:drawable/stat_sys_download"/>

                <TextView
                    android:id="@+id/forecast_min_temp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="28"
                    android:textSize="25sp"
                    android:padding="5dp"/>
            </LinearLayout>
            <TextView
                android:id="@+id/forecast_climate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thunderstorms"
                android:textSize="25sp"
                android:padding="5dp"/>

        </LinearLayout>
        <ImageView
            android:id="@+id/forecast_climate_image"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/weather"/>
    </LinearLayout>

</LinearLayout>